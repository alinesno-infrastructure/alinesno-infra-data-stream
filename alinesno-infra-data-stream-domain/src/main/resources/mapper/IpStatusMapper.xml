<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alinesno.infra.data.flink.mapper.IpStatusMapper">

    <resultMap type="com.alinesno.infra.data.flink.entity.IpStatusEntity" id="IpStatusResult">
                    <result property="ip" column="ip"/>
                    <result property="status" column="status"/>
                    <result property="lastTime" column="last_time"/>
            </resultMap>


    <update id="updateStatusByIp" parameterType="com.alinesno.infra.data.flink.entity.IpStatusEntity">
        update ip_status
        <set>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
            <if test="lastTime != null">
                last_time = #{lastTime,jdbcType=TIMESTAMP},
            </if>
            <if test="hasDelete != null">
                has_delete = #{hasDelete,jdbcType=BIT},
            </if>
        </set>
        where ip = #{ip,jdbcType=VARCHAR}
        <if test="operatorId != null">
            and  operator_id = #{operatorId}
        </if>
    </update>

    <select id="selectLastIp" resultType="com.alinesno.infra.data.flink.entity.IpStatusEntity">
        select
           *
        from ip_status
        WHERE
        has_delete = 0
        AND STATUS = 1 and last_time >= DATE_ADD(NOW()  - interval 8 hour ,INTERVAL -61 SECOND)
        <if test="operatorId != null">
          and  operator_id = #{operatorId}
        </if>
        ORDER BY
        last_time DESC
        limit 1
    </select>

</mapper>
